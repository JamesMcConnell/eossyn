@model Eossyn.Web.Models.LoginModel

@{
	ViewBag.Title = "Log in";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin form-horizontal" })) {
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<fieldset>
		<legend>Sign In</legend>
		<div class="control-group">
			@Html.LabelFor(m => m.UserName, new { @class = "control-label" })
			<div class="controls">
				@Html.TextBoxFor(m => m.UserName, new { @class = "input-level-block", placeholder = "Username" })
				@Html.ValidationMessageFor(m => m.UserName)
			</div>
		</div>
		<div class="control-group">
			@Html.LabelFor(m => m.Password, new { @class = "control-label" })
			<div class="controls">
				@Html.PasswordFor(m => m.Password, new { @class = "input-level-block", placeholder = "Username" })
				@Html.ValidationMessageFor(m => m.Password)
			</div>
		</div>
		<p>
			@Html.ActionLink("Register", "Register") if you don't have an account.
		</p>	
	</fieldset>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
